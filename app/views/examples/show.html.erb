<h2 align="center">Name: <%= @example.name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center description"><strong>URL:</strong></h4>
  <hr><%= simple_format(@example.url) %>
  <div class="article-actions">
    <%= link_to 'Edit this Example Application', edit_example_path(@example), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this Example Application", example_path(@example), method: :delete, data: {confirm: "Are you sure you want to delete this example application?"}, class: "btn btn-xs btn-danger" %>
    <%= link_to "View all Example Applications", examples_path, class: "btn btn-xs btn-success" %>
  </div>
</div>