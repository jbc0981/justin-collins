<h1 align="center">Example Applications</h1>

<% @examples.each do |example| %>
  <div class"col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <div class="article-title">
        Application Name: <%= link_to example.name, example_path(example) %>
      </div>
      <div class="article-body">
        <strong>Application URL:</strong> <a href="<%= example.url %>" target="_blank" ><%= example.url %></a>
      </div>
      <div class="article-actions">
        <%= link_to 'Edit this Example Application', edit_example_path(example), class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete this Example Application", example_path(example), method: :delete, data: {confirm: "Are you sure you want to delete this Example Application?"}, class: "btn btn-xs btn-danger" %>
      </div>
    </div>
  </div>
<% end %>
